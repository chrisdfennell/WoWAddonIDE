<Window x:Class="WoWAddonIDE.Windows.GitAuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Git / GitHub Settings" Height="300" Width="560"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- row 0 -->
            <RowDefinition Height="Auto"/>
            <!-- row 1 -->
            <RowDefinition Height="Auto"/>
            <!-- row 2 -->
            <RowDefinition Height="Auto"/>
            <!-- row 3 -->
            <RowDefinition Height="Auto"/>
            <!-- row 4 -->
            <RowDefinition Height="*"/>
            <!-- row 5 -->
            <RowDefinition Height="Auto"/>
            <!-- row 6 -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Git identity -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Git User Name:" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <TextBox   x:Name="UserName" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Git User Email:" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <TextBox   x:Name="UserEmail" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

        <!-- OAuth App client id -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="GitHub OAuth Client ID:" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <TextBox   x:Name="ClientId" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

        <!-- Token (PAT or OAuth access token) -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="GitHub Token (PAT / OAuth):" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <PasswordBox x:Name="Token" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"/>

        <!-- Default remote -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Default Remote URL:" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <TextBox   x:Name="RemoteUrl" Grid.Row="4" Grid.Column="1" Margin="0,0,0,8"/>

        <!-- Blurb -->
        <TextBlock Grid.Row="5" Grid.ColumnSpan="2" TextWrapping="Wrap" Foreground="Gray">
      Token is stored locally in settings.json. Use OAuth Sign-In (Git → “Sign in with GitHub…”) to fill this automatically,
      or paste a PAT. Remote URL example: https://github.com/you/YourRepo.git
        </TextBlock>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="100" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>