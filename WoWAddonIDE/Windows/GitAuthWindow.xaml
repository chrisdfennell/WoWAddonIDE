<Window x:Class="WoWAddonIDE.Windows.GitAuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Git / GitHub Settings" Height="260" Width="560" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Git User Name:" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <TextBox   x:Name="UserName" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Git User Email:" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <TextBox   x:Name="UserEmail" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="GitHub Token (PAT):" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <PasswordBox x:Name="Token" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Default Remote URL:" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <TextBox   x:Name="RemoteUrl" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="4" Grid.ColumnSpan="2" TextWrapping="Wrap"
               Foreground="Gray"
               Text="Token should have repo access. It’s stored locally in settings.json. You can leave it blank if your system Git credential helper is set up."/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="100" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>