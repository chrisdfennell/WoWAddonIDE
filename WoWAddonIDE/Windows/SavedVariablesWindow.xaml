<Window x:Class="WoWAddonIDE.Windows.SavedVariablesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SavedVariables Inspector"
        Width="900" Height="640"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource App.BackgroundBrush}"
        Foreground="{StaticResource App.ForegroundBrush}"
        KeyDown="Window_KeyDown">

    <Grid Margin="0"
          Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===== Top: Root path + actions ===== -->
        <Border Grid.Row="0" Margin="12,12,12,6"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="1" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="SavedVariables root:"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>

                <TextBox x:Name="RootPathBox"
                         Grid.Column="1"
                         Height="28"
                         Padding="6,2"
                         IsReadOnly="True"
                         VerticalContentAlignment="Center"
                         Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                         Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
                         BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                         Margin="0,0,8,0"/>

                <Button Grid.Column="2"
                        Content="Browse…"
                        Width="92" Height="28"
                        Click="BrowseRoot_Click"
                        Margin="0,0,8,0"/>

                <Button Grid.Column="3"
                        Content="Refresh"
                        Width="92" Height="28"
                        Click="Refresh_Click"/>
            </Grid>
        </Border>

        <!-- ===== Filter row ===== -->
        <Grid Grid.Row="1" Margin="12,0,12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Filter:"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>

            <!-- Search box with simple watermark -->
            <Grid Grid.Column="1">
                <TextBox x:Name="FilterBox"
                         Height="28"
                         Padding="6,2"
                         VerticalContentAlignment="Center"
                         Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                         Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
                         BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                         TextChanged="FilterBox_TextChanged"/>
                <TextBlock Text="Type to filter files/keys/values…"
                           Margin="10,0,6,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Opacity="0.55">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=FilterBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Expand/Collapse -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Expand All"  Margin="8,0,0,0" Click="ExpandAll_Click"/>
                <Button Content="Collapse All" Margin="8,0,0,0" Click="CollapseAll_Click"/>
            </StackPanel>
        </Grid>

        <!-- ===== Main content: Tree + details ===== -->
        <Grid Grid.Row="2" Margin="12,0,12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Tree -->
            <Border Grid.Column="0"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    BorderThickness="1">
                <TreeView x:Name="FilesTree"
                          SelectedItemChanged="FilesTree_SelectedItemChanged"
                          Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                          Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}">
                </TreeView>
            </Border>

            <GridSplitter Grid.Column="1"
                          Width="6" HorizontalAlignment="Stretch"
                          Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>

            <!-- Details -->
            <Border Grid.Column="2"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    BorderThickness="1" Padding="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Path:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>

                        <TextBox x:Name="SelectedPathBox"
                                 Grid.Column="1"
                                 Height="28"
                                 Padding="6,2"
                                 IsReadOnly="True"
                                 VerticalContentAlignment="Center"
                                 Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                                 Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
                                 BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                                 Margin="0,0,8,0"/>

                        <Button Grid.Column="2"
                                Content="Copy Path"
                                Width="96" Height="28"
                                Click="CopyPath_Click"
                                Margin="0,0,8,0"/>

                        <Button Grid.Column="3"
                                Content="Copy Value"
                                Width="96" Height="28"
                                Click="CopyValue_Click"/>
                    </Grid>

                    <ScrollViewer Grid.Row="2"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <TextBox x:Name="ValueBox"
                                 FontFamily="Consolas"
                                 FontSize="13"
                                 IsReadOnly="True"
                                 AcceptsReturn="True"
                                 AcceptsTab="True"
                                 TextWrapping="NoWrap"
                                 Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                                 Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
                                 BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- ===== Footer ===== -->
        <DockPanel Grid.Row="3" LastChildFill="False" Margin="12,0,12,12">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <TextBlock x:Name="StatusText" Margin="0,0,12,0"/>
                <TextBlock Text="Tip: Double-click a value in the tree to preview it here."
                   Opacity="0.7"
                   VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Close" Width="92" Click="Close_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>