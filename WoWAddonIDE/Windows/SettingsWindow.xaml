<Window x:Class="WoWAddonIDE.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="260" Width="640" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="AddOns Path:" VerticalAlignment="Center" Margin="0,0,8,0"/>
        <TextBox  x:Name="AddOns" Grid.Row="0" Grid.Column="1" Margin="0,0,8,8"/>
        <Button   Grid.Row="0" Grid.Column="2" Content="Browse..." Margin="0,0,0,8" Click="BrowseAddOns_Click"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Staging Path:" VerticalAlignment="Center" Margin="0,0,8,0"/>
        <TextBox  x:Name="Staging" Grid.Row="1" Grid.Column="1" Margin="0,0,8,8"/>
        <Button   Grid.Row="1" Grid.Column="2" Content="Browse..." Margin="0,0,0,8" Click="BrowseStaging_Click"/>

        <CheckBox x:Name="AllowInside" Grid.Row="2" Grid.ColumnSpan="3" Content="Allow building when project is already inside AddOns (NOT recommended)" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="3">
            <TextBlock Text="Package Excludes (extensions, comma/space separated):" Margin="0,0,0,4"/>
            <TextBox x:Name="Excludes"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="100" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>