<!-- Windows/BuildTargetsWindow.xaml -->
<Window x:Class="WoWAddonIDE.Windows.BuildTargetsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Build Multi-Zip (WoW Flavors)"
        Width="560" Height="360" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Brush.Window}"
        Foreground="{DynamicResource Brush.FG}">
    <DockPanel>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid x:Name="Grid"
                      Grid.Row="0"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Build" Binding="{Binding IsChecked}" Width="80"/>
                    <DataGridTextColumn Header="Flavor" Binding="{Binding DisplayName}" IsReadOnly="True" Width="140"/>
                    <DataGridTextColumn Header="Interface" Binding="{Binding Interface}" Width="100"/>
                    <DataGridTextColumn Header="Zip Suffix" Binding="{Binding Suffix}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="OK" Width="100" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
                <Button Content="Cancel" Width="100" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>