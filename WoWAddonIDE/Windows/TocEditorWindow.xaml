<Window x:Class="WoWAddonIDE.Windows.TocEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TOC Editor" Height="520" Width="680" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Interface:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox  x:Name="Interface" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Title:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox  x:Name="TitleBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Notes:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox  x:Name="Notes" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

        <ListBox x:Name="Files" Grid.Row="3" Grid.ColumnSpan="2" SelectionMode="Extended"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add File..." Margin="0,0,8,0" Click="AddFile_Click"/>
            <Button Content="Remove Selected" Margin="0,0,8,0" Click="RemoveSelected_Click"/>
            <Button Content="Save" Width="120" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>