<Window x:Class="WoWAddonIDE.Windows.GitHubSignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign in with GitHub" Height="220" Width="520"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,6">
            <TextBlock Text="1) Click 'Open GitHub' and sign in (passkeys/2FA supported)."/>
            <TextBlock Text="2) After approval, this window will detect completion automatically."/>
        </StackPanel>

        <!-- Status area -->
        <Border Grid.Row="1" Padding="8" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6">
            <TextBlock x:Name="StatusText"
                       Text="Ready."
                       TextWrapping="Wrap"
                       />
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="OpenButton" Content="Open GitHub" Width="120" Margin="0,0,8,0" Click="OpenGitHub_Click"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
