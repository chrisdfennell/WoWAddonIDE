<!-- Windows/AboutWindow.xaml -->
<Window x:Class="WoWAddonIDE.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About WoWAddonIDE" Width="640" Height="560"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="22" FontWeight="Bold">WoWAddonIDE</TextBlock>
        <TextBlock Grid.Row="1" Margin="0,4,0,0" Opacity="0.8">
            Version: <Run x:Name="VersionRun"/>
        </TextBlock>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Margin="0,0,0,8">
                    GitHub: 
                    <Hyperlink NavigateUri="https://github.com/chrisdfennell/WoWAddonIDE"
                               RequestNavigate="Hyperlink_RequestNavigate">
                        github.com/chrisdfennell/WoWAddonIDE
                    </Hyperlink>
                </TextBlock>

                <Border BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                        BorderThickness="1" Padding="10">
                    <StackPanel>
                        <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6">MIT License</TextBlock>
                        <TextBlock x:Name="LicenseText" FontFamily="Consolas" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="120" Margin="0,0,8,0" Click="OpenRepo_Click">Open GitHub</Button>
            <Button Width="90" IsDefault="True" Click="Close_Click">Close</Button>
        </StackPanel>
    </Grid>
</Window>
