<Window x:Class="WoWAddonIDE.Windows.GitCommitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Commit" Height="260" Width="560" WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top" Text="Commit message:" Margin="0,0,0,6"/>
        <TextBox x:Name="CommitMessageBox"
             AcceptsReturn="True"
             VerticalScrollBarVisibility="Auto"
             FontFamily="Consolas" />
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Commit" Width="120" Margin="0,0,8,0" Click="Commit_Click"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </DockPanel>
</Window>