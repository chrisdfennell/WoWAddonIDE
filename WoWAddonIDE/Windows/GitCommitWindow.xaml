<Window x:Class="WoWAddonIDE.Windows.GitCommitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Commit" Height="260" Width="560" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Commit message:" Margin="0,0,0,6"/>

        <TextBox Grid.Row="1" x:Name="CommitMessageBox"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 MinHeight="120"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Commit" Width="120" Margin="0,0,8,0" Click="Commit_Click"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>