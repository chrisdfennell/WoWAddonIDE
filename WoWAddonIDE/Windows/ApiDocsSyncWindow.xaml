<Window x:Class="WoWAddonIDE.Windows.ApiDocsSyncWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="API Docs Sync" Width="560" Height="360"
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBlock Text="Import WoW API doc JSON and merge/replace completion list."/>
        </StackPanel>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="Source:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="SourceMode" Width="150">
                    <ComboBoxItem Content="File" IsSelected="True"/>
                    <ComboBoxItem Content="URL"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <StackPanel x:Name="FilePanel" Orientation="Horizontal">
                    <TextBox x:Name="FilePath" Width="360" Margin="0,0,8,0"/>
                    <Button Content="Browse…" Width="90" Click="Browse_Click"/>
                </StackPanel>

                <StackPanel x:Name="UrlPanel" Orientation="Horizontal" Visibility="Collapsed">
                    <TextBox x:Name="UrlText" Width="460" Margin="0,0,8,0" Text="https://example.com/wow_api.json"/>
                </StackPanel>

                <CheckBox x:Name="ReplaceCheck" Content="Replace existing docs (instead of merge)" Margin="0,8,0,0"/>
                <TextBox x:Name="Preview" Margin="0,8,0,0" Height="160" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Load Preview" Width="110" Margin="0,0,8,0" Click="LoadPreview_Click"/>
                <Button Content="Apply" Width="80" IsDefault="True" Click="Apply_Click"/>
                <Button Content="Cancel" Width="80" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>