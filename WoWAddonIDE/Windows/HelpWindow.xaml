<Window x:Class="WoWAddonIDE.Windows.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help — WoWAddonIDE"
        Width="760" Height="640"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="22" FontWeight="Bold">Help &amp; Quickstart</TextBlock>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,8,0,4">🚀 Create or Open a Project</TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,8">
                    <Run>• </Run><Bold>File → New Project…</Bold><Run> — choose your Working Folder, enter addon name, a TOC and Main.lua are scaffolded.</Run><LineBreak/>
                    <Run>• </Run><Bold>File → Open Project…</Bold><Run> — select an existing addon folder (the one with a .toc).</Run>
                </TextBlock>

                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,8,0,4">📝 Editing</TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,8">
                    <Run>• Lua &amp; XML syntax highlighting.</Run><LineBreak/>
                    <Run>• Autocomplete starts as you type (letters, _ , ! , . ).</Run><LineBreak/>
                    <Run>• Snippets: type </Run><Bold>!slash</Bold><Run> or </Run><Bold>!ace</Bold><Run> then accept completion.</Run><LineBreak/>
                    <Run>• Parameter hints: appear after typing </Run><Bold>(</Bold><Run> on known functions.</Run><LineBreak/>
                    <Run>• Hover docs: pause the mouse over an API to see signature/description.</Run>
                </TextBlock>

                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,8,0,4">🔎 Navigation</TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,8">
                    <Run>• </Run><Bold>Ctrl+Shift+F</Bold><Run>: Find in Files.</Run><LineBreak/>
                    <Run>• </Run><Bold>F12</Bold><Run>: Go to Definition (symbols in your project).</Run><LineBreak/>
                    <Run>• </Run><Bold>Ctrl+/</Bold><Run>: Toggle comment.  </Run><Bold>Ctrl+D</Bold><Run>: Duplicate line.</Run>
                </TextBlock>

                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,8,0,4">📦 Build &amp; Package</TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,8">
                    <Run>• </Run><Bold>Project → Build to AddOns</Bold><Run>: copies to WoW _retail_ / Interface / AddOns / YourAddon.</Run><LineBreak/>
                    <Run>• </Run><Bold>Project → Build to Folder</Bold><Run>: build anywhere you like.</Run><LineBreak/>
                    <Run>• </Run><Bold>Project → Build Zip</Bold><Run>: creates a distributable .zip in your staging folder.</Run>
                </TextBlock>

                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,8,0,4">🔗 Git &amp; Releases</TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,8">
                    <Run>• Initialize / Clone / Commit / Pull / Push from the Git menu.</Run><LineBreak/>
                    <Run>• Publish a GitHub Release with your packaged asset.</Run>
                </TextBlock>

                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,8,0,4">⚙️ Settings</TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,8">
                    <Run>• </Run><Bold>Tools → Settings…</Bold><Run> — set AddOns Path, Working Folder, fonts, tabs/indent, excludes.</Run><LineBreak/>
                    <Run>• Font and editor options apply to new and open tabs immediately.</Run>
                </TextBlock>

                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,8,0,4">📚 WoW API</TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,8">
                    <Run>• Built-in hover docs are included.</Run><LineBreak/>
                    <Run>• Tools → API Docs → Import from Game, or import a JSON file/URL to enrich completions.</Run>
                </TextBlock>

                <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,8,0,4">❓ More</TextBlock>
                <TextBlock TextWrapping="Wrap">
                    <Run>• GitHub: </Run>
                    <Hyperlink NavigateUri="https://github.com/chrisdfennell/WoWAddonIDE"
                               RequestNavigate="Link_RequestNavigate">
                        github.com/chrisdfennell/WoWAddonIDE
                    </Hyperlink><LineBreak/>
                    <Run>• Issues: </Run>
                    <Hyperlink NavigateUri="https://github.com/chrisdfennell/WoWAddonIDE/issues"
                               RequestNavigate="Link_RequestNavigate">
                        github.com/chrisdfennell/WoWAddonIDE/issues
                    </Hyperlink>
                </TextBlock>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="90" IsDefault="True" Click="Close_Click">Close</Button>
        </StackPanel>
    </Grid>
</Window>