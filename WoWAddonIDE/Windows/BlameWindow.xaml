<Window x:Class="WoWAddonIDE.Windows.BlameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Git Blame" Width="860" Height="600"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Header" Margin="8" />

        <ListView x:Name="List" Grid.Row="1" Margin="8">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Lines" DisplayMemberBinding="{Binding Lines}" Width="80"/>
                    <GridViewColumn Header="Commit" DisplayMemberBinding="{Binding ShaShort}" Width="90"/>
                    <GridViewColumn Header="Author" DisplayMemberBinding="{Binding Author}" Width="160"/>
                    <GridViewColumn Header="When" DisplayMemberBinding="{Binding When}" Width="160"/>
                    <GridViewColumn Header="Summary" DisplayMemberBinding="{Binding Summary}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>