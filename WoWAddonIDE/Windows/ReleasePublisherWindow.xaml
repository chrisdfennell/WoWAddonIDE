<Window x:Class="WoWAddonIDE.Windows.ReleasePublisherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Publish GitHub Release"
        Width="560" Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="520" MinHeight="420">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Tag -->
        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0" Text="Tag (e.g. v1.2.3)"/>
        <TextBox   x:Name="TagText" Grid.Row="0" Grid.Column="1" Margin="0,0,6,0"/>

        <!-- Release name -->
        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0" Text="Release name"/>
        <TextBox   x:Name="NameText" Grid.Row="2" Grid.Column="1" Margin="0,0,6,0"/>

        <!-- Asset zip -->
        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0" Text="Asset (.zip)"/>
        <TextBox   x:Name="AssetText" Grid.Row="4" Grid.Column="1" Margin="0,0,6,0"/>
        <Button    Grid.Row="4" Grid.Column="2" Padding="10,4" Click="Browse_Click">Browse…</Button>

        <!-- Body / notes -->
        <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Top" Margin="0,2,10,0" Text="Release notes"/>
        <TextBox   x:Name="BodyText" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2"
                   AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                   MinHeight="160"/>

        <!-- Footer -->
        <StackPanel Grid.Row="8" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <CheckBox x:Name="PrereleaseCheck" Content="Mark as pre-release" Margin="0,0,12,0" VerticalAlignment="Center"/>
            <Button Width="90" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click">Publish</Button>
            <Button Width="90" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>