<Window x:Class="WoWAddonIDE.Windows.FindInFilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Find in Files" Height="520" Width="740" WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10" VerticalAlignment="Top">
            <TextBlock Text="Find:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="Query" Width="280" Margin="0,0,12,0"/>
            <CheckBox x:Name="Regex" Content="Regex" Margin="0,0,12,0"/>
            <CheckBox x:Name="Case" Content="Case" Margin="0,0,12,0"/>
            <TextBlock Text="Extensions:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="Extensions" Width="160" ToolTip="Comma or space separated (e.g. .lua,.xml,.toc)"/>
            <Button Content="Search" Margin="12,0,0,0" Click="Search_Click"/>
        </StackPanel>

        <ListView x:Name="Results">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="File" Width="360" DisplayMemberBinding="{Binding File}"/>
                    <GridViewColumn Header="Line" Width="60" DisplayMemberBinding="{Binding Line}"/>
                    <GridViewColumn Header="Col" Width="60" DisplayMemberBinding="{Binding Col}"/>
                    <GridViewColumn Header="Snippet" Width="220" DisplayMemberBinding="{Binding Snippet}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>