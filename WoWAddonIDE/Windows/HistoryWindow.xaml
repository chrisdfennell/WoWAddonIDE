<Window x:Class="WoWAddonIDE.Windows.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File History" Width="900" Height="640"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView x:Name="List">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Commit" DisplayMemberBinding="{Binding ShaShort}" Width="90"/>
                    <GridViewColumn Header="Author" DisplayMemberBinding="{Binding Author}" Width="160"/>
                    <GridViewColumn Header="When" DisplayMemberBinding="{Binding When}" Width="160"/>
                    <GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="420"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Diff vs Previous" Width="130" Margin="0,0,8,0" Click="DiffPrev_Click"/>
            <Button Content="Close" Width="90" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>