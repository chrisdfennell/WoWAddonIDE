<Window x:Class="WoWAddonIDE.Windows.SymbolSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Go to Symbol" Height="420" Width="560" WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <TextBox x:Name="Query" DockPanel.Dock="Top" Margin="0,0,0,8" TextChanged="Query_TextChanged" />
        <ListView x:Name="Results" MouseDoubleClick="Results_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Symbol" Width="220" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="File" Width="220" DisplayMemberBinding="{Binding File}"/>
                    <GridViewColumn Header="Line" Width="60" DisplayMemberBinding="{Binding Line}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>