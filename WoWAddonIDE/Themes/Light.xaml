<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Shell -->
    <SolidColorBrush x:Key="Brush.Window"  Color="#FFF6F6F6"/>
    <SolidColorBrush x:Key="Brush.Panel"   Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Brush.Chrome"  Color="#FFEDEDED"/>
    <SolidColorBrush x:Key="Brush.Border"  Color="#22000000"/>
    <SolidColorBrush x:Key="Brush.FG"      Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="Brush.Accent"  Color="#FF2563EB"/>
    <!-- nice blue; tweak if you like -->

    <!-- Editor -->
    <SolidColorBrush x:Key="Brush.EditorBG"        Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Brush.EditorFG"        Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="Brush.EditorLine"      Color="#FFB4B4B4"/>
    <SolidColorBrush x:Key="Brush.EditorSelection" Color="#332563EB"/>
    <SolidColorBrush x:Key="Brush.SelectionBorder" Color="#FF2563EB"/>

</ResourceDictionary>